{$R *.dfm}

procedure TFRM_Medicos.DS_GenericoDataChange(Sender: TObject; Field: TField);
begin
  inherited;
  CDS_Especializacoes.Close;
  SQL_Especializacoes.Params[0].AsInteger :=DM_Principal.CDS_MedicosCODIGO_MEDICO.AsInteger;
